{
  "manifest_version": 3,
  "name": "Sofia",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon_16.png",
      "48": "icons/icon_64.png",
      "128": "icons/icon_128.png"
    }
  },
  "permissions": [
    "clipboardRead"
  ],
  "host_permissions": [
    "https://api.deepseek.com/*"
  ],
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_64.png",
    "128": "icons/icon_128.png"
  }
}